# This file is loaded for all shell sessions (login, non-login, interactive, non-interactive).

# Set global environment variables
export LANG=en_US.UTF-8
export EDITOR=nvim
export PATH="/usr/local/bin:/usr/bin:/bin:/usr/sbin:/sbin:$PATH"

# Minimal setup to avoid overhead in non-interactive shells
export ZSH="$HOME/.oh-my-zsh"
export ZSH_SILENT="true"
